<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/widget_no_game_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TxT_WIDGET_NO_GAME"/>

        <Button
            android:id="@+id/widget_no_game_start_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TxT_WIDGET_GO_DOWNLOAD"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_play_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:text="제목"/>
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp">
                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/widget_flipper_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/menu"/>
            </FrameLayout>
        </RelativeLayout>

        <ViewFlipper
            android:id="@+id/widget_menu_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out">

            <ViewFlipper
                android:id="@+id/widget_game_flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/slide_right_in"
                android:outAnimation="@anim/slide_right_out">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/widget_game1_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/widget_game1_image_iv"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>

                        <TextView
                            android:id="@+id/widget_game1_image_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/widget_game1_info_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/widget_playing_game1_info_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/widget_playing_game1_info_description_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/widget_playing_game1_info_maker_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/widget_playing_game1_info_email_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game1_info_start_game_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/TxT_WIDGET_INFO_START_GAME"/>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/widget_playing_game1_no_selections_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/widget_playing_game1_no_selections_next_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/widget_playing_game1_selections_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/widget_playing_game1_selection1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game1_selection2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game1_selection3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game1_selection4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/widget_game2_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/widget_game2_image_iv"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>

                        <TextView
                            android:id="@+id/widget_game2_image_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/widget_game2_info_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/widget_playing_game2_info_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/widget_playing_game2_info_description_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/widget_playing_game2_info_maker_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/widget_playing_game2_info_email_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game2_info_start_game_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/TxT_WIDGET_INFO_START_GAME"/>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/widget_playing_game2_no_selections_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/widget_playing_game2_no_selections_next_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/widget_playing_game2_selections_lo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/widget_playing_game2_selection1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game2_selection2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game2_selection3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/widget_playing_game2_selection4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </ViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/widget_menu_start_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TxT_WIDGET_MENU_START_GAME"/>

                <Button
                    android:id="@+id/widget_menu_start_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TxT_WIDGET_MENU_OPEN_APP"/>
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>
</LinearLayout>